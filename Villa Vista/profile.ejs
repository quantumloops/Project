<main class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Your Profile</h2>
        
        <div class="text-center mt-3">
            <h4><i class="fas fa-user"></i> <%= user.username %></h4>
            <p><i class="fas fa-envelope"></i> <%= user.email %></p>
        </div>

        <hr>

        <h3>Your Listings</h3>
        <% listings.forEach(listing => { %>
            <p><strong><%= listing.title %></strong> - <%= listing.location %></p>
        <% }) %>

        <hr>

        <h3>Your Bookings</h3>
        <% bookings.forEach(booking => { %>
            <p><strong><%= booking.listing.title %></strong> - 
               From: <%= booking.startDate.toDateString() %> 
               To: <%= booking.endDate.toDateString() %></p>
        <% }) %>
    </div>
</main>
